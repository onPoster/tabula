{
  "name": "tabula",
  "license": "LGPL-2.1",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "test": "graph test",
    "deploy:gnosis-chain": "yarn prepare:gnosis-chain && graph deploy --node https://api.thegraph.com/deploy/ asgeir-eth/tabula-gnosis-chain",
    "prepare:gnosis-chain": "mustache network_configs/gnosis-chain.json subgraph.template.yaml > subgraph.yaml",
    "deploy:rinkeby": "yarn prepare:rinkeby && graph deploy --node https://api.thegraph.com/deploy/ asgeir-eth/tabula-rinkeby",
    "prepare:rinkeby": "mustache network_configs/rinkeby.json subgraph.template.yaml > subgraph.yaml",
    "fmt": "prettier '(test|src)/**/*.ts' -w",
    "pre-commit": "yarn fmt"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.28.0",
    "@graphprotocol/graph-ts": "0.26.0"
  },
  "devDependencies": {
    "matchstick-as": "^0.4.0",
    "mustache": "^4.2.0",
    "prettier": "^2.5.1"
  }
}
